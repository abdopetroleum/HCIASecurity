<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="600dp"
    android:layout_gravity="center"
    android:padding="@dimen/main_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/left_top"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Question Type"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/right_top"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Answered Questions"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button8"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="True and false"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/true_false_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Score"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button8"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Single choice"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/singl_choice_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Score"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button8"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Multiple choice"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/multiple_choice_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:text="Score"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button11"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal"
              >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    app:srcCompat="@drawable/previous" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calibri"
                    android:gravity="start|center"
                    android:text="Back"
                    android:padding="4dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button11"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/calibri"
                    android:gravity="end|center"
                    android:text="Confirm"
                    android:textColor="@color/primaryTextColor"
                    android:padding="4dp"
                    android:textSize="16dp" />
                <ImageView
                    android:layout_width="40dp"
                    android:maxWidth="24dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    app:srcCompat="@drawable/forward" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>