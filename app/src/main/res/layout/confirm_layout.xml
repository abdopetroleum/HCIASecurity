<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:maxHeight="700dp"
    android:padding="@dimen/main_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/left_top"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Question Type"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/right_top"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Answered Questions"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="True and false"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/true_false_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Single choice"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/singl_choice_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Multiple choice"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/multiple_choice_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="True and false"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/string_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button11"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/previous" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/calibri"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="Back"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button11"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/calibri"
                        android:gravity="end|center"
                        android:padding="4dp"
                        android:text="Confirm"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:maxWidth="24dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/forward" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>