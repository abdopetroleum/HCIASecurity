<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/score_layout"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/button10"
                android:fontFamily="@font/calibri"
                android:paddingLeft="@dimen/main_padding"
                android:paddingTop="@dimen/main_padding"
                android:paddingRight="@dimen/main_padding"
                android:paddingBottom="@dimen/main_padding"
                android:text="Your score"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="171dp"
        android:layout_height="169dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circular_button"
        android:gravity="center"
        android:paddingLeft="@dimen/main_padding"
        android:paddingTop="@dimen/main_padding"
        android:paddingRight="@dimen/main_padding"
        android:paddingBottom="@dimen/main_padding"
        android:text="888 /\n1000"
        android:layout_gravity="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button14"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:paddingLeft="@dimen/text_rirht_and_left_margin"
            android:paddingTop="@dimen/text_top_and_bottom_margin"
            android:paddingRight="@dimen/text_rirht_and_left_margin"
            android:paddingBottom="@dimen/text_top_and_bottom_margin"
            android:text="   Score details "
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/left_top"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Question Type"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/right_top"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="True and false"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/true_false_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Single choice"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/singl_choice_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button8"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Multiple choice"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/multiple_choice_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/show_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/button10"
                android:fontFamily="@font/calibri"
                android:paddingVertical="8dp"
                android:paddingLeft="@dimen/main_padding"
                android:paddingRight="@dimen/main_padding"
                android:text="Show Answers"
                android:textAllCaps="false"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>